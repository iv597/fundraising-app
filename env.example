# Clerk Environment Variables
# Get these from your Clerk dashboard at https://dashboard.clerk.com/
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here

# Optional: Clerk Frontend API URL (for custom domains)
# NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
# NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
# NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
# NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# Prisma postgres auth
DATABASE_URL="postgresql://postgres:admin@localhost:5433/postgres?schema=fundraising_app"

# Plaid Environment
PLAID_CLIENT_ID=your_client_id
PLAID_SECRET=your_sandbox_secret
PLAID_ENV=sandbox
NEXT_PUBLIC_PLAID_ENV=sandbox
PLAID_APP_NAME="Fundraising App"
PLAID_LANGUAGE="en"